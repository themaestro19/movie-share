    <div class="row">
            <div style="width: 40%; margin: 40px auto;">
            <form action="/moviepage/<%= moviepage._id %>/comments" method="POST">
                <h1>Add New Comment to <%= moviepage.name %></h1>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-primary btn-lg">Submit!</button>
                </div>     
            </form>
            <a href="/moviepage">Back to MOVIEPAGE</a>
        </div>
    </div>
</div>



