<% include ../partials/header %>



<div class="container">
    <div class="row">
            <div style="width: 40%; margin: 40px auto;">
            <form action="/moviepage/<%= moviepage._id %>?_method=PUT" method="POST">
                <h1>Edit <%= moviepage.name %></h1>
                <div class="form-group">
                    <input class="form-control" type="text" name="moviepage[name]" value="<%= moviepage.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="moviepage[image]" value="<%= moviepage.image %>">
                </div>
                <div class="form-group">
                        <input class="form-control" type="text" name="moviepage[description]" value="<%= moviepage.description %>">
                    </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg">Submit!</button>
                </div>     
            </form>
            <a href="/moviepage">Back to MOVIEPAGE</a>
        </div>
    </div>
</div>



<% include ../partials/footer %>